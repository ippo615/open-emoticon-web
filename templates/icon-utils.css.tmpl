.<%= utilityClassPrefix %> {
  display: inline-block;
  font-size: inherit;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
/* ---------------------------------------------------------------- *
 *                                                          Sizes   *
 * ---------------------------------------------------------------- */
/* makes the font 33% larger relative to the icon container */
.<%= utilityClassPrefix %>-lg {
  font-size: 1.33333333em;
  line-height: 0.75em;
  vertical-align: -15%;
}
.<%= utilityClassPrefix %>-2x {
  font-size: 2em;
}
.<%= utilityClassPrefix %>-3x {
  font-size: 3em;
}
.<%= utilityClassPrefix %>-4x {
  font-size: 4em;
}
.<%= utilityClassPrefix %>-5x {
  font-size: 5em;
}
.<%= utilityClassPrefix %>-fw {
  width: 1.28571429em;
  text-align: center;
}

/* ---------------------------------------------------------------- *
 *                                                    List Styles   *
 * ---------------------------------------------------------------- */
.<%= utilityClassPrefix %>-ul {
  padding-left: 0;
  margin-left: 2.14285714em;
  list-style-type: none;
}
.<%= utilityClassPrefix %>-ul > li {
  position: relative;
}
.<%= utilityClassPrefix %>-li {
  position: absolute;
  left: -2.14285714em;
  width: 2.14285714em;
  top: 0.14285714em;
  text-align: center;
}
.<%= utilityClassPrefix %>-li.<%= utilityClassPrefix %>-lg {
  left: -1.85714286em;
}

/* ---------------------------------------------------------------- *
 *                                                     Animations   *
 * ---------------------------------------------------------------- */

.<%= utilityClassPrefix %>-spin {
  -webkit-animation: fa-spin 2s infinite linear;
  animation: fa-spin 2s infinite linear;
}
.<%= utilityClassPrefix %>-pulse {
  -webkit-animation: fa-spin 1s infinite steps(8);
  animation: fa-spin 1s infinite steps(8);
}
@-webkit-keyframes fa-spin {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(359deg);
    transform: rotate(359deg);
  }
}
@keyframes fa-spin {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(359deg);
    transform: rotate(359deg);
  }
}

/* ---------------------------------------------------------------- *
 *                                                      Rotations   *
 * ---------------------------------------------------------------- */

.<%= utilityClassPrefix %>-rotate-90 {
  -ms-filter: "progid:DXImageTransform.Microsoft.BasicImage(rotation=1)";
  -webkit-transform: rotate(90deg);
  -ms-transform: rotate(90deg);
  transform: rotate(90deg);
}
.<%= utilityClassPrefix %>-rotate-180 {
  -ms-filter: "progid:DXImageTransform.Microsoft.BasicImage(rotation=2)";
  -webkit-transform: rotate(180deg);
  -ms-transform: rotate(180deg);
  transform: rotate(180deg);
}
.<%= utilityClassPrefix %>-rotate-270 {
  -ms-filter: "progid:DXImageTransform.Microsoft.BasicImage(rotation=3)";
  -webkit-transform: rotate(270deg);
  -ms-transform: rotate(270deg);
  transform: rotate(270deg);
}
.<%= utilityClassPrefix %>-flip-horizontal {
  -ms-filter: "progid:DXImageTransform.Microsoft.BasicImage(rotation=0, mirror=1)";
  -webkit-transform: scale(-1, 1);
  -ms-transform: scale(-1, 1);
  transform: scale(-1, 1);
}
.<%= utilityClassPrefix %>-flip-vertical {
  -ms-filter: "progid:DXImageTransform.Microsoft.BasicImage(rotation=2, mirror=1)";
  -webkit-transform: scale(1, -1);
  -ms-transform: scale(1, -1);
  transform: scale(1, -1);
}
:root .<%= utilityClassPrefix %>-rotate-90,
:root .<%= utilityClassPrefix %>-rotate-180,
:root .<%= utilityClassPrefix %>-rotate-270,
:root .<%= utilityClassPrefix %>-flip-horizontal,
:root .<%= utilityClassPrefix %>-flip-vertical {
  filter: none;
}

/* ---------------------------------------------------------------- *
 *                                                       Stacking   *
 * ---------------------------------------------------------------- */

.<%= utilityClassPrefix %>-stack {
  position: relative;
  display: inline-block;
  width: 2em;
  height: 2em;
  line-height: 2em;
  vertical-align: middle;
}
.<%= utilityClassPrefix %>-stack-1x,
.<%= utilityClassPrefix %>-stack-2x {
  position: absolute;
  left: 0;
  width: 100%;
  text-align: center;
}
.<%= utilityClassPrefix %>-stack-1x {
  line-height: inherit;
}
.<%= utilityClassPrefix %>-stack-2x {
  font-size: 2em;
}

/* ---------------------------------------------------------------- *
 *                                                       Position   *
 * ---------------------------------------------------------------- */

.<%= utilityClassPrefix %>-pull-left {
  float: left;
}
.<%= utilityClassPrefix %>-pull-right {
  float: right;
}
.<%= utilityClassPrefix %>.<%= utilityClassPrefix %>-pull-left {
  margin-right: .3em;
}
.<%= utilityClassPrefix %>.<%= utilityClassPrefix %>-pull-right {
  margin-left: .3em;
}
.<%= utilityClassPrefix %>.pull-left {
  margin-right: .3em;
}
.<%= utilityClassPrefix %>.pull-right {
  margin-left: .3em;
}

/* ---------------------------------------------------------------- *
 *                                                           Misc   *
 * ---------------------------------------------------------------- */

.<%= utilityClassPrefix %>-border {
  padding: .2em .25em .15em;
  border: solid 0.08em #eeeeee;
  border-radius: .1em;
}
.<%= utilityClassPrefix %>-inverse {
  color: #ffffff;
}
